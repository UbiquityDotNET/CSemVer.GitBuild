<Project TreatAsLocalProperty="_TaskFolder">
    <PropertyGroup>
        <!--
        Force the timestamp into ISO 8601 format so it is locale neutral
        Furthermore UTC is used to ensure consistency of the stamp across
        various geopolitical time zones.
        -->
        <BuildTime Condition="'$(BuildTime)'==''">$([System.DateTime]::UtcNow.ToString("o"))</BuildTime>
        <!--
        While these names can be overriden it is important to keep in mind the sort ordering,
        ideally a local dev build should have a higher order than any other build (all other elements on
        the left being equal). This ensures that local edit,build debug cycles are really using what was built.
        -->
        <CiBuildName Condition="'$(CiBuildName)'=='' AND '$(IsPullRequestBuild)'=='true'">PRQ</CiBuildName>
        <CiBuildName Condition="'$(CiBuildName)'=='' AND '$(IsAutomatedBuild)'=='true'">BLD</CiBuildName>
        <CiBuildName Condition="'$(CiBuildName)'==''">ZZZ</CiBuildName>
    </PropertyGroup>
</Project>
